{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC debug build",
            "type": "shell",
            "command": "gcc",
            "windows": {
                "args": [
                    "-g", "-Wall", "-O0", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe", "${file}", "-lm"
                ]
            },
            "linux": {
                "args": [
                    "-g", "-Wall", "-O0", "-o", "${fileDirname}/${fileBasenameNoExtension}", "${file}", "-lm"
                ]
            },
            "osx": {
                "args": [
                    "-g", "-Wall", "-O0", "-o", "${fileDirname}/${fileBasenameNoExtension}", "${file}", "-lm"
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
