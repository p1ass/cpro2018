{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC debug build",
            "type": "shell",
            "command": "gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "args": [
                    "-std=c99", "-g", "-Wall", "-O0", "-o", "\"${fileBasenameNoExtension}.exe\"", "\"${relativeFile}\"", "-lm"
                ]
            },
            "linux": {
                "args": [
                    "-std=c99", "-g",  "-Wall", "-O0", "-o", "\"${fileBasenameNoExtension}\"", "\"${relativeFile}\"", "-lm"
                ]
            },
            "osx": {
                "args": [
                    "-std=c99", "-g",  "-Wall", "-O0", "-o", "\"${fileBasenameNoExtension}\"", "\"${relativeFile}\"", "-lm"
                ]    
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "GCC release build",
            "type": "shell",
            "command": "gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "args": [
                    "-std=c99", "-g",  "-Wall", "-O2", "-o", "\"${fileBasenameNoExtension}.exe\"", "\"${relativeFile}\"", "-lm"
                ]
            },
            "linux": {
                "args": [
                    "-std=c99", "-g",  "-Wall", "-O2", "-o", "\"${fileBasenameNoExtension}\"", "\"${relativeFile}\"", "-lm"
                ]
            },
            "osx": {
                "args": [
                    "-std=c99", "-g",  "-Wall", "-O2", "-o", "\"${fileBasenameNoExtension}\"", "\"${relativeFile}\"", "-lm"
                ]    
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        }
    ]
}
